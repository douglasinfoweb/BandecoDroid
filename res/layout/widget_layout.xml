<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout1_widget"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topLayout_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/topImage_widget"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/cardapio_almoco_top" />

        <TextView
            android:id="@+id/Titulo_widget"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/topImage_widget"
            android:layout_alignRight="@id/topImage_widget"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="N/A"
            android:textAppearance="@style/Titulo" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/PratoPrincipalRow_widget"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cardapio_almoco_repeat"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/txt_widget"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="N/A"
            android:textAppearance="@style/Texto" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/bottomImage_widget"
        android:layout_width="180dp"
        android:layout_height="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/cardapio_almoco_bottom" />

</LinearLayout>